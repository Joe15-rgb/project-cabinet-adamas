  <section class="home-section">
    <div class="greeting">
      <p><%= new Date().toLocaleDateString("fr-FR", {
      weekday: "long",
      year: "numeric",
      month: "long",
      day: "numeric",
    }) %></p>
      <h1>
        <% const hour = new Date().getHours() %>
        <%=  hour < 12 ? "Bonjour" :  hour < 17 ? "Bonne aprÃ¨s midi" : "Bonjour"  %>, John Doe!
